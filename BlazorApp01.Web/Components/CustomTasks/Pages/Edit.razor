@page "/customtasks/edit"
@rendermode InteractiveServer
@using BlazorApp01.Domain.Enums
@using BlazorApp01.Domain.Models
@using BlazorApp01.Features.CQRS.MediatorFacade
@using BlazorApp01.Features.CQRS.Requests.CustomTasks.Commands
@using BlazorApp01.Features.CQRS.Requests.CustomTasks.Queries
@inject ISenderFacade Sender
@inject NavigationManager NavigationManager

<PageTitle>Edit</PageTitle>

<h1>Edit</h1>

<h4>CustomTask</h4>
<hr />

@if (isLoading)
{
    <p><em>Loading...</em></p>
}
else if (customTask == null)
{
    <p class="alert alert-danger">CustomTask not found.</p>
    <div>
        <a href="/customtasks">Back to List</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <EditForm Model="customTask" OnValidSubmit="UpdateCustomTask" FormName="edit">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />
                <input type="hidden" @bind="customTask.CustomTaskId" />
                <div class="form-group">
                    <span class="text-danger">*</span>
                    <label for="Description" class="control-label">Description</label>
                    <InputText id="Description" @bind-Value="customTask.Description" class="form-control" />
                    <ValidationMessage For="() => customTask.Description" class="text-danger" />
                </div>
                <div class="form-group">
                    <label for="Status" class="control-label">Status</label>
                    <InputSelect id="Status" @bind-Value="customTask.Status" class="form-control">
                        @foreach (var status in Enum.GetValues<CustomTaskStatus>())
                        {
                            <option value="@status">@status</option>
                        }
                    </InputSelect>
                    <ValidationMessage For="() => customTask.Status" class="text-danger" />
                </div>
                <div class="form-group">
                    <label for="CreatedAt" class="control-label">CreatedAt</label>
                    <InputDate Type="InputDateType.DateTimeLocal" id="CreatedAt" @bind-Value="customTask.CreatedAt" class="form-control" />
                    <ValidationMessage For="() => customTask.CreatedAt" class="text-danger" />
                </div>
                <div class="form-group">
                    <label for="DueDate" class="control-label">DueDate</label>
                    <InputDate id="DueDate" @bind-Value="customTask.DueDate" class="form-control" />
                    <ValidationMessage For="() => customTask.DueDate" class="text-danger" />
                </div>
                <div class="form-group">
                    <label for="CompletionDate" class="control-label">CompletionDate</label>
                    <InputDate Type="InputDateType.DateTimeLocal" id="CompletionDate" @bind-Value="customTask.CompletionDate" class="form-control" />
                    <ValidationMessage For="() => customTask.CompletionDate" class="text-danger" />
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <InputCheckbox id="IsActive" @bind-Value="customTask.IsActive" class="form-check-input" />
                        IsActive
                    </label>
                </div>
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger mt-3">@errorMessage</div>
                }
                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                        @(isSubmitting ? "Saving..." : "Save")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>

    <div>
        <a href="/customtasks">Back to List</a>
    </div>
}

@code {
    [SupplyParameterFromQuery]
    public int CustomTaskId { get; set; }

    [SupplyParameterFromForm]
    private CustomTaskModel? customTask { get; set; }

    private bool isLoading = true;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private byte[] rowVersion = Array.Empty<byte>();

    protected override async Task OnInitializedAsync()
    {
        if (customTask == null)
        {
            var query = new GetCustomTaskByIdQuery(CustomTaskId);
            var result = await Sender.SendAsync(query);

            if (result.IsSuccess && result.Value != null)
            {
                var task = result.Value;
                customTask = new CustomTaskModel
                {
                    CustomTaskId = task.CustomTaskId,
                    Description = task.Description,
                    Status = task.Status,
                    CreatedAt = task.CreatedAt,
                    DueDate = task.DueDate,
                    CompletionDate = task.CompletionDate,
                    IsActive = task.IsActive
                };
                rowVersion = task.RowVersion;
            }

            isLoading = false;
        }
    }

    private async Task UpdateCustomTask()
    {
        if (customTask == null)
        {
            return;
        }

        isSubmitting = true;
        errorMessage = string.Empty;

        try
        {
            var command = new UpdateCustomTaskCommand(
                CustomTaskId: customTask.CustomTaskId,
                Description: customTask.Description,
                Status: customTask.Status,
                CreatedAt: customTask.CreatedAt,
                DueDate: customTask.DueDate,
                CompletionDate: customTask.CompletionDate,
                IsActive: customTask.IsActive,
                RowVersion: rowVersion
            );

            var result = await Sender.SendAsync(command);

            if (result.IsSuccess && result.Value)
            {
                NavigationManager.NavigateTo("/customtasks");
            }
            else
            {
                errorMessage = "Failed to update custom task. It may have been modified by another user.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private sealed class CustomTaskModel
    {
        public int CustomTaskId { get; set; }
        public string Description { get; set; } = string.Empty;
        public CustomTaskStatus Status { get; set; }
        public DateTime CreatedAt { get; set; }
        public DateOnly DueDate { get; set; }
        public DateTime? CompletionDate { get; set; }
        public bool IsActive { get; set; }
    }
}
