@page "/customtasks"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorApp01.Domain.Models
@using BlazorApp01.Features.CQRS.MediatorFacade
@using BlazorApp01.Features.CQRS.Requests.CustomTasks.Queries
@using BlazorApp01.Web.Services
@inject ISenderFacade Sender
@inject IDateTimeHelper DateTimeHelper

<PageTitle>Custom Tasks</PageTitle>

<h1>Custom Tasks</h1>

<input type="search" @bind="descriptionFilter" @bind:event="oninput" @bind:after="RefreshGridAsync" placeholder="Search by description..." />

<p>
    <a href="customtasks/create">Create New</a>
</p>

<QuickGrid Class="table" ItemsProvider="customTasksProvider" Pagination="pagination">
    <PropertyColumn Property="customtask => customtask.Description" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.Status" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.CreatedAtUserTZ" Title="Created At" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.DueDate" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.CompletionDateUserTZ" Title="Completion Date" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.IsActive" Sortable="true" />

    <TemplateColumn Context="customtask">
        <a href="@($"customtasks/edit?customtaskid={customtask.CustomTaskId}")">Edit</a> |
        <a href="@($"customtasks/details?customtaskid={customtask.CustomTaskId}")">Details</a> |
        <a href="@($"customtasks/delete?customtaskid={customtask.CustomTaskId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="pagination" />

@code {
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };

    private string descriptionFilter = string.Empty;

    private GridItemsProvider<CustomTaskViewModel>? customTasksProvider;

    protected override void OnInitialized()
    {
        customTasksProvider = async request =>
        {
            string? sortBy = null;
            bool sortAscending = true;

            if (request.GetSortByProperties().Any())
            {
                SortedProperty sortProperty = request.GetSortByProperties().First();
                sortBy = sortProperty.PropertyName switch
                {
                    nameof(CustomTaskViewModel.CreatedAtUserTZ) => nameof(CustomTask.CreatedAt),
                    nameof(CustomTaskViewModel.CompletionDateUserTZ) => nameof(CustomTask.CompletionDate),
                    _ => sortProperty.PropertyName
                };
                sortAscending = sortProperty.Direction == SortDirection.Ascending;
            }

            var query = new GetCustomTasksPagedQuery(
                DescriptionFilter: string.IsNullOrWhiteSpace(descriptionFilter) ? null : descriptionFilter,
                StartIndex: request.StartIndex,
                Count: request.Count ?? pagination.ItemsPerPage,
                SortBy: sortBy,
                SortAscending: sortAscending
            );

            var responseResult = await Sender.SendAsync(query, request.CancellationToken);

            var response = responseResult.Value;

            // Map to view models
            var viewModels = response.Items
                .Select(task => new CustomTaskViewModel(task, DateTimeHelper))
                .ToList();

            return GridItemsProviderResult.From(viewModels, response.TotalCount);
        };
    }

    private async Task RefreshGridAsync()
    {
        await pagination.SetCurrentPageIndexAsync(0);
    }

    private sealed class CustomTaskViewModel
    {
        private readonly CustomTask _task;
        private readonly IDateTimeHelper _dateTimeHelper;

        public CustomTaskViewModel(CustomTask task, IDateTimeHelper dateTimeHelper)
        {
            _task = task;
            _dateTimeHelper = dateTimeHelper;
        }

        public int CustomTaskId => _task.CustomTaskId;
        public string Description => _task.Description;
        public string Status => _task.Status.ToString();
        public DateOnly DueDate => _task.DueDate;
        public bool IsActive => _task.IsActive;
        public string CreatedAtUserTZ => _dateTimeHelper.ConvertToFormattedUserDateTime(_task.CreatedAt);
        public string CompletionDateUserTZ => _dateTimeHelper.ConvertToFormattedUserDateTime(_task.CompletionDate);
    }
}
