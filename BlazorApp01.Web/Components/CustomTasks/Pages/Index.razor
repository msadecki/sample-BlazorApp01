@page "/customtasks"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Components.QuickGrid
@using BlazorApp01.Domain.Models
@using BlazorApp01.Features.CQRS.MediatorFacade
@using BlazorApp01.Features.CQRS.Requests.CustomTasks.Queries
@inject ISenderFacade Sender

<PageTitle>Index</PageTitle>

<h1>Index</h1>

<input type="search" @bind="descriptionFilter" @bind:event="oninput" @bind:after="RefreshGridAsync" placeholder="Search by description..." />

<p>
    <a href="customtasks/create">Create New</a>
</p>

<QuickGrid Class="table" ItemsProvider="customTasksProvider" Pagination="pagination">
    <PropertyColumn Property="customtask => customtask.Description" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.Status" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.CreatedAt" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.DueDate" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.CompletionDate" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.IsActive" Sortable="true" />
    <PropertyColumn Property="customtask => customtask.RowVersion" Sortable="true" />

    <TemplateColumn Context="customtask">
        <a href="@($"customtasks/edit?customtaskid={customtask.CustomTaskId}")">Edit</a> |
        <a href="@($"customtasks/details?customtaskid={customtask.CustomTaskId}")">Details</a> |
        <a href="@($"customtasks/delete?customtaskid={customtask.CustomTaskId}")">Delete</a>
    </TemplateColumn>
</QuickGrid>
<Paginator State="pagination" />

@code {
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };

    private string descriptionFilter = string.Empty;

    private GridItemsProvider<CustomTask>? customTasksProvider;

    protected override void OnInitialized()
    {
        customTasksProvider = async request =>
        {
            string? sortBy = null;
            bool sortAscending = true;

            if (request.GetSortByProperties().Any())
            {
                var sortProperty = request.GetSortByProperties().First();
                sortBy = sortProperty.PropertyName;
                sortAscending = sortProperty.Direction == SortDirection.Ascending;
            }

            var query = new GetCustomTasksPagedQuery(
                DescriptionFilter: string.IsNullOrWhiteSpace(descriptionFilter) ? null : descriptionFilter,
                StartIndex: request.StartIndex,
                Count: request.Count ?? pagination.ItemsPerPage,
                SortBy: sortBy,
                SortAscending: sortAscending
            );

            var responseResult = await Sender.SendAsync(query, request.CancellationToken);

            var response = responseResult.Value;

            return GridItemsProviderResult.From(response.Items, response.TotalCount);
        };
    }

    private async Task RefreshGridAsync()
    {
        await pagination.SetCurrentPageIndexAsync(0);
    }
}
