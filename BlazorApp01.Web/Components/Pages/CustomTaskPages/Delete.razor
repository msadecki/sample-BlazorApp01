@page "/customtasks/delete"
@using Microsoft.EntityFrameworkCore
@using BlazorApp01.Domain.Models
@inject IDbContextFactory<BlazorApp01.DataAccess.Contexts.AppDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>CustomTask</h2>
    <hr />
    @if (customtask is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@customtask.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@customtask.Status</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CreatedAt</dt>
            <dd class="col-sm-10">@customtask.CreatedAt</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">DueDate</dt>
            <dd class="col-sm-10">@customtask.DueDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">CompletionDate</dt>
            <dd class="col-sm-10">@customtask.CompletionDate</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">IsActive</dt>
            <dd class="col-sm-10">@customtask.IsActive</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">RowVersion</dt>
            <dd class="col-sm-10">@customtask.RowVersion</dd>
        </dl>
        <EditForm method="post" Model="customtask" OnValidSubmit="DeleteCustomTask" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(customtask is null)">Delete</button> |
            <a href="/customtasks">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private CustomTask? customtask;

    [SupplyParameterFromQuery]
    private int CustomTaskId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        customtask = await context.CustomTasks.FirstOrDefaultAsync(m => m.CustomTaskId == CustomTaskId);

        if (customtask is null)
        {
            NavigationManager.NotFound();
        }
    }

    private async Task DeleteCustomTask()
    {
        using var context = DbFactory.CreateDbContext();
        context.CustomTasks.Remove(customtask!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/customtasks");
    }
}
